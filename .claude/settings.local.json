{
  "permissions": {
    "allow": [
      "Bash(pnpm add:*)",
      "Bash(pnpm db:generate:*)",
      "Bash(pnpm build:*)"
    ],
    "deny": [],
    "defaultMode": "acceptEdits"
  },
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    }
  }
}